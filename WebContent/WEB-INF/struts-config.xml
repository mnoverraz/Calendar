<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC 
 "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN" 
 "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>
  <!-- ========== Définition des beans de formulaire =============== -->
  <form-beans>
    <form-bean name="inputRoomForm" type="calendar.web.struts.InputRoomForm" />
  </form-beans>

  <!-- ========== Définition des enchainements ================ -->
  <global-forwards>
  </global-forwards>

  <!-- ========== Définition du mappage d'action ==================== -->
  <action-mappings>
  
    <action path="/roomManagement"
      type="calendar.web.struts.ListRoomAction">
      <forward name="success" path="/roomManagement.jsp" />
    </action> 
    
    <action path="/inputRoom"
      type="calendar.web.struts.InputRoomAction"
      name="inputRoomForm"
      scope="request"
      input="/inputRoom.jsp"
      validate="false">
      <forward name="success" path="/inputRoom.jsp"/>
<!--       <forward name="failure" path="/inputRoom.do"/> -->
    </action>
    
    <action path="/inputRoomAdd"
      type="calendar.web.struts.InputRoomAddAction"
      name="inputRoomForm"
      scope="request"
      input="/inputRoom.jsp"
      validate="true">
      <forward name="success" path="/roomManagement.do" redirect="true" />
      <forward name="failure" path="/inputRoom.do"/>
    </action>
    
    <action path="/inputRoomRemove"
      type="calendar.web.struts.InputRoomRemoveAction">
      <forward name="success" path="/roomManagement.do" redirect="true" />
    </action>
    
    <action path="/editRoom"
      type="calendar.web.struts.InputRoomAction"
      name="inputRoomForm"
      scope="request"
      input="/inputRoomEdition.jsp"
      validate="false">
      <forward name="success" path="/inputRoomEdition.jsp"/>
<!--       <forward name="failure" path="/inputRoom.do"/> -->
	</action>

	<action path="/inputRoomUpdate"
      type="calendar.web.struts.InputRoomUpdateAction"
      name="inputRoomForm"
      scope="request"
      input="/inputRoomEdition.jsp"
      validate="true">
      <forward name="success" path="/roomManagement.do" redirect="true" />
<!--       <forward name="failure" path="/editRoom.do"/> -->
    </action>

  </action-mappings>
 
  <!-- ========== Définition Messages et  plug-in ==================== -->
  <message-resources parameter="calendar.web.struts.FormMessages"/>

</struts-config>
